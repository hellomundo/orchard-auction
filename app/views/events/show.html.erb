<p id="notice"><%= notice %></p>
<div class="orchard-panel">
  <div class="panel-header">
    <h1><%= @event.date.strftime('%Y') %> Auction</h1>
    <ul>
      <li><%= link_to 'Edit', edit_event_path(@event) %></li>
    </ul>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <div class="stat">
        <em>Auction Date</em>
        <strong id="stat"><%= @event.date %></strong>
      </div>
    </div>
    <div class="large-8 columns">
      <div class="stat">
        <em>Theme</em>
        <p><%= @event.theme %></p>
      </div>
    </div>
  </div>

</div>
