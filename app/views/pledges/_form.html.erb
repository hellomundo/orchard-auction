<div id="pledge-add-form">
  <%= simple_form_for(@pledge, :remote => true) do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="large-4 columns"><%= f.input :buyer_id %></div>
      <div class="large-4 columns"><%= f.input :amount %></div>
      <div class="large-4 columns"><%= f.input :pledge_type %></div>
    </div>
  </div>
  <div class="form-control">
    <div class="row">
      <div class="large-12 columns"><%= f.button :submit, class: "btn" %><a id="pledge-cancel-button" class="btn">Cancel</a></div>
    </div>
  </div>
  <% end %>
</div>
