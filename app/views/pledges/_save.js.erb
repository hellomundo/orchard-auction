$("#pledge-errors ul").html("");
<% if @pledge.errors.any? %>
  <% @pledge.errors.full_messages.each do |message| %>
    $("#pledge-errors ul").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
  $("#pledge-errors").slideDown();
<% else %>
  $("#pledge-list").html("<%= escape_javascript(render 'index') %>");
  $("#pledge-errors").slideUp(0);
<% end %>
