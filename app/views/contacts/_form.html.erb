<%= simple_form_for([@event, Contact.new], remote: true) do |f| %>
<div class="form-inputs">
  <div class="row">
    <div class="large-6 columns"><%= f.label :contacted_on %> <%= f.date_field :contacted_on, :value => Time.now.strftime('%Y-%m-%d'), class: 'datepicker' %></div>
    <div class="large-6 columns"><%= f.input :channel %></div>
  </div>
  <div class="row">
    <div class="large-12 columns"><%= f.input :note, input_html: { class: 'materialize-textarea' } %></div>
  </div>
  <%= f.hidden_field :donor_id, value: @donor.id %>
  <div class="row">
  <div class="large-12 columns">
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
  </div>
</div>
<% end %>
