<%= simple_form_for([@event, @lot]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="large-12 columns"><%= f.input :name %></div>
    </div>
     <div class="row">
      <div class="large-12 columns"><%= f.input :description %></div>
    </div>
    <div class="row">
      <div class="large-3 columns"><%= f.input :opening_price %></div>
      <div class="large-3 columns"><%= f.input :bid_increment %></div>
      <div class="large-3 columns"><%= f.input :buy_now_price %></div>
      <div class="large-3 columns"><%= f.input :table_number, collection: 1..10 %></div>
    </div>
    <div class="row">
      <div class="large-3 columns"><%= f.input :quantity_available, placeholder: '1' %></div>
    </div>
  </div>

  <br>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
