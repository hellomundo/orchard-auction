<%= simple_form_for(@donor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :company %>
    <div class="sameline">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    </div>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :address1 %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, input_html: { class: 'btn' } %>
  </div>
<% end %>
