<%= simple_form_for(@donor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="large-12 columns"><%= f.input :company %></div>
    </div>
    <div class="row">
      <div class="large-6 columns"><%= f.input :first_name %></div>
      <div class="large-6 columns"><%= f.input :last_name %></div>
    </div>
    <div class="row">
      <div class="large-6 columns"><%= f.input :email %></div>
      <div class="large-6 columns"><%= f.input :phone %></div>
    </div>
    <div class="row">
      <div class="large-12 columns"><%= f.input :address1 %></div>
    </div>
    <div class="row">
      <div class="large-12 columns"><%= f.input :address2 %></div>
    </div>
    <div class="row">
      <div class="large-6 columns"><%= f.input :city %></div>
      <div class="large-2 columns"><%= f.input :state %></div>
      <div class="large-4 columns"><%= f.input :zip %></div>
    </div>
    <div class="row">
      <div class="large-12 columns"><%= f.input :website %></div>
    </div>
    <div class="row">
      <div class="large-6 columns"><%= f.input :has_donated %></div>
      <div class="large-6 columns"><%= f.input :status %></div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      </div>
    </div>
  
  </div>

<% end %>
