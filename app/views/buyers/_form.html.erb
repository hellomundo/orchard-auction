<%= simple_form_for([@event, @buyer]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="large-5 columns"><%= f.input :first_name %></div>
      <div class="large-5 columns"><%= f.input :last_name %></div>
      <div class="large-2 columns"><%= f.input :guests %></div>
    </div>
    <div class="row">
      <div class="large-6 columns"><%= f.input :email %></div>
      <div class="large-6 columns"><%= f.input :telephone %></div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      </div>
    </div>

  </div>
<% end %>
